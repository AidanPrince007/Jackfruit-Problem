def is_prime(num):
    if num < 2:
        return False
    for i in range(2,int(num**0.5) + 1):
        if num % i == 0:
            return False
    return True
def generate_primes(limit):
	primes = []
	for number in range(2, limit + 1):
		if is_prime(number):
			primes.append(number)
	return primes
def visualize_primes(primes, limit):
	print("\nPrime Number Visualizer")
	print("-" * 40)
	for i in range(1, limit + 1):
		if i in primes:
			print(f"{i:3} | " + "*" * 5 + " PRIME")
		else:
			print(f"{i:3} | ")
if __name__ == "__main__":
	limit = int(input("Enter the limit to find prime numbers up to: "))

	primes = generate_primes(limit)
	print(f"\nPrime numbers up to {limit}:")
	print(primes)

	visualize_primes(primes, limit)
